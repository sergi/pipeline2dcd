{
  "manifest_version": 2,
  "name": "pipeline2yaml",
  "version": "1.0",

  "description": "Converts Spinnaker pipelines to declarative code",

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://*.schibsted.io/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/js-yaml.min.js", "lib/picoModal.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
